    <title>Document</title>

    <style>
      * {
        box-sizing: border-box;
      }
      @import url("https://fonts.googleapis.com/css?family=Rubik:400,500&display=swap");

      body {
        font-family: "Rubik", sans-serif;
      }

      .container {
        display: flex;
        height: 100vh;
      }

      .left {
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
        justify-content: center;
        animation-name: left;
        animation-duration: 1s;
        animation-fill-mode: both;
        animation-delay: 1s;
      }

      .right {
        flex: 1;
        background-color: black;
        transition: 1s;
        background-image: url(https://images.unsplash.com/photo-1515302569996-e150029e73fb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1469&q=80);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
      }

      .header > h2 {
        font-size: 35px;
        margin: 0;
        color: #012c5e;
        padding-top: 10px;
      }

      .header > h4 {
        margin-top: 10px;
        font-weight: normal;
        font-size: 15px;
        color: rgba(0, 0, 0, 0.4);
      }

      .form {
        padding-top: 5%;
        max-width: 80%;
        display: flex;
        flex-direction: column;
      }

      .form > p {
        text-align: right;
      }

      .form > p > a {
        color: #000;
        font-size: 14px;
      }

      .form-field {
        font-size: x-large;
        height: 46px;
        padding: 0 16px;
        border: 2px solid #ddd;
        border-radius: 4px;
        outline: 0;
        transition: 0.2s;
        margin-top: 20px;
        margin-bottom: 20px;
        color: rgba(0, 0, 0, 0.4);
      }

      .form-field:focus {
        border-color: #012c5e;
      }

      .form > button {
        padding: 12px 10px;
        border: 0;
        background: #012c5e; /*linear-gradient(to right, #f4f4f4 0%, #012c5e 100%); */
        border-radius: 3px;
        margin-top: 10px;
        color: #fff;
        letter-spacing: 1px;
        font-family: "Rubik", sans-serif;
        font-size: x-large;
      }

      .animation {
        animation-name: move;
        animation-duration: 0.4s;
        animation-fill-mode: both;
        animation-delay: 2s;
      }

      .a1 {
        animation-delay: 2s;
      }

      .a2 {
        animation-delay: 2.1s;
      }

      .a3 {
        animation-delay: 2.2s;
      }

      .a4 {
        animation-delay: 2.3s;
      }

      .a5 {
        animation-delay: 2.4s;
      }

      .a6 {
        animation-delay: 2.5s;
      }

      .form-control {
        font-weight: normal;
        font-size: 20px;
        color: rgba(0, 0, 0, 0.4);
        line-height: 1.1;
        display: grid;
        grid-template-columns: 1em auto;
        gap: 0.5em;
        transform: translateY(-0.075em);
        padding-top: 10px;
        padding-bottom: 10px;
      }

      input[type="radio"] {
        -ms-transform: scale(1.8); /* IE 9 */
        -webkit-transform: scale(1.8); /* Chrome, Safari, Opera */
        transform: scale(1.8);
      }

      input[type="text"] {
        text-align: right;
        font-size: x-large;
      }

      .custom4::placeholder {
        text-align: start;
        font-size: 15px;
      }

      .logo {
        width: fit-content;
      }

      .logo img {
        height: 80px;
        width: 100%;
      }

      @keyframes move {
        0% {
          opacity: 0;
          visibility: hidden;
          transform: translateY(-40px);
        }

        100% {
          opacity: 1;
          visibility: visible;
          transform: translateY(0);
        }
      }

      @keyframes left {
        0% {
          opacity: 0;
          width: 0;
        }

        100% {
          opacity: 1;
          padding: 20px 40px;
          width: 50%;
        }
      }

      @media only screen and (max-width: 900px) {
        .header > h2 {
          font-size: 35px;
          margin: 0;
          color: #012c5e;
          padding-top: 10px;
        }
        .header > h4 {
          margin-top: 10px;
          font-weight: normal;
          font-size: 25px;
          color: rgba(0, 0, 0, 0.4);
